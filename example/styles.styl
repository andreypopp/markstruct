@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700")

bg = #fafafa
color = #444

body
  font-family: 'Source Sans Pro', sans-serif
  font-size: 100%
  background: bg
  color: color

pre
  margin: 0

.Editor
  width: 500px
  margin: 0 auto

.Editable
  min-height: 1em
  &:focus
    outline: none

.BlockWrapper
  position: relative
  .BlockPanel
    width: 100%
    position: absolute
    bottom: -10px
    display: none
  &.Focused
    .BlockPanel
      display: block
  &:hover
    .BlockPanel
      display: block

.BlockPanel
  border-top: 1px solid #ddd
  text-align: right
  height: 10px
  .Button
    margin-right: 1em
    cursor: pointer
    display: inline-block
    color: #888
    font-size: 10px
    text-transform: uppercase

.Block
  min-height: 1em
  position: relative
  padding: 5px 10px
  margin: 0.5em 0
  margin-bottom: 14px

.Paragraph
  line-height: 1.35em

.Image
  img
    width: 100%
  img:focus
    outline: none

.Code
  background: #ffffff
  padding: 20px
  .Editable
    font-size: 90%
    font-family: Menlo, Monaco, monospace
  &:before
    content: '```'
    top: 5px
    left: -40px
    width: 30px;
    font-size: 100%
    font-weight: bold
    color: #ccc
    text-align: right
    position: absolute
  
.Line
  text-align: center
  font-weight: bold
  font-size: 130%
  letter-spacing: 0.2em
  color: #ccc
  div
    outline: none

.ListItem
  line-height: 1.35em
  margin: 0.25em 0
  margin-left: 2em
  &:before
    content: '-'
    left: -30px
    width: 20px;
    font-size: 150%
    font-weight: bold
    color: #ccc
    text-align: right
    position: absolute

.Heading
  line-height: 1.25em
  font-weight: bold
  &:before
    color: #ccc
    text-align: right
    position: absolute
    width: 80px
    left: -90px

.Heading1
  font-size: 250%
  &:before
    content: '#'

.Heading2
  font-size: 150%
  &:before
    content: '##'

.Heading3
  font-size: 130%
  &:before
    content: '###'

.Heading4
  font-size: 120%
  &:before
    content: '####'

.Heading5
  font-size: 110%
  &:before
    content: '#####'

.Heading6
  font-size: 100%
  &:before
    content: '######'
